<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ff0000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nickname"
        android:layout_width="305dp"
        android:layout_height="83dp"
        android:background="@drawable/border"
        android:gravity="center_horizontal|center_vertical"
        android:text="점수"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/point"
        android:layout_width="407dp"
        android:layout_height="62dp"
        android:background="@drawable/border"
        android:gravity="center_horizontal|center_vertical"
        android:text="닉네임 및 인사"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />

    <Button
        android:id="@+id/map"
        android:layout_width="223dp"
        android:layout_height="53dp"
        android:background="#00ff0000"
        android:backgroundTint="#FFFFFF"
        android:drawableBottom="@drawable/confirm_map"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395" />

    <Button
        android:id="@+id/reviewCheck"
        android:layout_width="223dp"
        android:layout_height="53dp"
        android:background="#00ff0000"
        android:backgroundTint="#FFFFFF"
        android:drawableBottom="@drawable/confirm_review"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.564" />

    <Button
        android:id="@+id/account"
        android:layout_width="223dp"
        android:layout_height="53dp"
        android:background="#00ff0000"
        android:backgroundTint="#FFFFFF"
        android:drawableBottom="@drawable/confirm_account"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.734" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reviewCheck"
        android:layout_width="372dp"
        android:layout_height="681dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="278dp"
            android:layout_height="81dp"
            android:layout_marginTop="24dp"
            android:text="만들것\nmap에 있는 것 처럼 자기가 쓴 글 다 보여주기\n계정관리 누르면 자기 정보보여주기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>